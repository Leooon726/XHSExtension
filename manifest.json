{
    "manifest_version": 3,
    "name": "小红书采集助手",
    "version": "1.0",
    "description": "A simple browser extension to get current tab content.",
    "permissions": ["activeTab", "scripting", "downloads", "storage"],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}